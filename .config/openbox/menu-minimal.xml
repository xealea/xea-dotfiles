<!DOCTYPE menu [
  <!ENTITY pipes "~/.config/pipemenus">
]>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <menu id="root-menu" title="Menu" label="Openbox 3">
<!--	<separator label="Main Menu"/>  -->
		<item label="Terminal Emulator">
			<action name="Execute">
				<command>alacritty</command>
			</action>
		</item>
		<item label="File Manager">
			<action name="Execute">
				<command>thunar</command>
			</action>
		</item>
		<item label="Web Browser">
			<action name="Execute">
				<command>firefox</command>
			</action>
		</item>
		<item label="Text Editor">
			<action name="Execute">
				<command>geany</command>
			</action>
		</item>
		<separator/>
			<item label="Change Wallpaper">
				<action name="Execute">
					<command>nitrogen</command>
				</action>
			</item>
			<item label="Appearance Settings">
				<action name="Execute">
					<command>xfce4-appearance-settings</command>
				</action>
			</item>
			<separator/>
			<item label="Power Settings">
				<action name="Execute">
					<command>xfce4-power-manager-settings</command>
				</action>
			</item>
			<item label="Audio Settings">
				<action name="Execute">
					<command>pavucontrol</command>
				</action>
			</item>
			<item label="Settings Manager">
				<action name="Execute">
					<command>xfce4-settings-manager</command>
				</action>
			</item>
		</menu>
		<separator/>
		<menu id="Exit" label="System">
				<item label="Logout">
					<action name="Execute">
						<command>~/.config/pipemenus/ac-powermenu --logout</command>
					</action>
				</item>
				<item label="Suspend">
					<action name="Execute">
						<command>~/.config/pipemenus/ac-powermenu --suspent</command>
					</action>
				</item>
				<item label="Reboot">
					<action name="Execute">
						<command>~/.config/pipemenus/ac-powermenu --reboot</command>
					</action>
				</item>
				<item label="Shutdown">
					<action name="Execute">
						<command>~/.config/pipemenus/ac-powermenu --shutdown</command>
					</action>
				</item>
		</menu>
	</menu>
</openbox_menu>
